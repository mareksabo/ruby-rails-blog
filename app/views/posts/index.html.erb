<h4 class="text-center">Filter by tag</h4>
<div class="row">
  <div class="col-xs-12 text-center">
    <% @tags.each do |tag| %>
        <%= link_to tag.name, filter_path(tag.name), :class => 'filter-by-tag' %>
    <% end %>
  </div>
</div>

<h2> <%= link_to 'Posts', posts_path %> </h2>

<% @posts.each do |post| %>
    <div class="container">
      <div class="post">
        <h3><%= post.title %></h3>
        <i><p><%= post.author %></p></i>
        <small><p>Type <%= post.comment_type %></p></small>
        <div class="post-body"><%= post.body %></div>
        <h3>Tags</h3>
        <div class="post-tags"><%= post.tags.join(', ') %></div>
      </div>
      <div class="comments">

        <% if can? :update, post %>
            <div>
              <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-lg btn-primary' %>
              <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Do you really want to delete this post?' },
                          class: 'btn btn-lg btn-primary'%>
            </div>
            <br>
        <% end %>
        <div id="comments">
          <% post.comments.each do |comment| %>
              <%= render comment if comment.parent_id.nil? %>
          <% end %>
        </div>
      </div>
      <% if post.comment_type != 'forbidden' %>
          <%= form_for [post, Comment.new] do |f| %>
              <p>
              <div>
                <%= f.hidden_field :author, :value => current_user.email %>
              </div>
              <%= f.text_area :body %>
              </p>
              <p><%= f.submit 'Add new comment', class: 'btn btn-sm btn-primary' %></p>
          <% end %>
      <% end %>
    </div>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
