<p id="notice"><%= notice %></p>

<h2>Filter by tag</h2>

<% @tags.each do |tag| %>
    <%= link_to tag.name, filter_path(tag.name), :class => 'filter-by-tag' %>
<% end %>

<h2> <%= link_to 'Posts', posts_path %> </h2>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr id=<%="post-row-#{post.id}"%>>
        <td class="post-author"><%= post.author %></td>
        <td class="post-title"><%= post.title %></td>
        <td class="post-body"><%= post.body %></td>
        <td class="post-tags"><%= post.tags.join(', ') %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

